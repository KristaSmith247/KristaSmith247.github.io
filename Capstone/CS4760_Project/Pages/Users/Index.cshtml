@page
@model CS4760_Project.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}
@if(Model.AuthenticatedUser != null && Model.AuthenticatedUser.IsAdmin){
    <h1>Index</h1>

    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].WNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].IsAdmin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].CollegeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].DepartmentId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].FacultyRole)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.User) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAdmin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CollegeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FacultyRole)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
} else
{
    <h1>You are not logged in.</h1>
    <a asp-page="/Users/Login" class="btn" id="blueButton">Login</a>
    <a asp-page="/Users/Signup" class="btn" id="button">Register</a>
}