@page
@model CS4760_Project.Pages.Users.LoginModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="User.Email"></label>
        <input asp-for="User.Email" class="form-control" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.Password"></label>
        <input asp-for="User.Password" type="password" class="form-control" />
        <span asp-validation-for="User.Password" class="text-danger"></span>
    </div>

    <p></p>

    <button type="submit" class="btn purpleButton">Login</button>
</form>

<p></p>


<div class="mt-3">
    <a asp-page="/Users/Signup" class="btn button">Register</a>
</div>

@section Scripts {
    <script>

        // For Anonymous Result pages clear the Anonymous check box after logout.
        document.addEventListener("DOMContentLoaded", function () {
            localStorage.removeItem('isAnonymousChecked');
        });
    </script>
}