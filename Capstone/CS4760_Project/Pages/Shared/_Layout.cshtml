@{
    ViewData["Layout"] = Context.Session.GetString("Layout");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CS4760_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/CS4760_Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" id="navigation">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Home" id="navigation">CS4760_Project</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (ViewData["Layout"] != null)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Home" id="navigation">Home</a>
                            </li>
                            <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Grants/Index" id="navigation">Grants</a>
                            </li>
                            @if((string)ViewData["Layout"] == "admin")
                            {
                               <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Departments/Index" id="navigation">Departments</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Colleges/Index" id="navigation">Colleges</a>
                                </li>
                                <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-page="/Grants/Review" id="navigation">Review</a>
                                </li>
                                <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-page="/RubricCriterion/Index" id="navigation">Criterion</a>
                                </li>
                            }
                            else
                            {    
                                @if((string)ViewData["Layout"] == "reviewer")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-page="/Grants/Review" id="navigation">Review</a>
                                    </li>
                                }
                            }
                        </ul>
                        <ul class="navbar-nav ml-auto">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Users/Logout" id="navigation">Logout</a>
                                </li>
                        </ul>

                    }    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" id="foot">
        <div class="container">
            &copy; 2024 - CS4760_Project - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
